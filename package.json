{
  "name": "chatrave",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "typecheck": "pnpm -r --filter './packages/*' --filter './apps/*' run typecheck",
    "test": "pnpm -r --filter './packages/*' --filter './apps/*' run test",
    "check:strudel-boundary": "bash tools/check-strudel-boundary.sh",
    "check:secrets": "bash tools/check-secrets.sh",
    "check:dev-fake-boundary": "node tools/check-dev-fake-boundary.mjs",
    "check:prompt-placeholders": "node tools/check-prompt-placeholders.mjs",
    "ci": "pnpm run check:strudel-boundary && pnpm run check:secrets && pnpm run check:dev-fake-boundary && pnpm run check:prompt-placeholders && pnpm run typecheck && pnpm run test",
    "mock:llm": "node scripts/mock-llm-server.mjs"
  },
  "devDependencies": {
    "@langchain/core": "^0.3.56",
    "@types/node": "^22.13.8",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
